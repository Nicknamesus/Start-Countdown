{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",  // ðŸ‘ˆ tells TS how to compile JSX
    
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]          // "@/components/button" -> "<root>/components/button"
      // If you prefer "@/app/*" to mean the app folder instead, use:
      // "@/*": ["./app/*"]
    },

    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["react", "react-native"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
